<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.mall3.category.service.CategoryMapper">

	<select id="selectCategoryById" parameterType="String" resultType="com.test.mall3.category.service.Category">
      SELECT 
      category_no AS categoryNo
			,category_name AS categoryName
      FROM category
      WHERE category_no = #{categoryNo}
      AND category_name = #{categoryName}   
   </select>
                                                                                             

	<select id="selectCategoryList" parameterType="java.util.Map" resultType="com.test.mall3.category.service.Category">
		SELECT
			category_no AS categoryNo
			,category_name AS categoryName
		FROM category 
		ODER BY category_no DESC
		LIMIT #{beginRow},#{pagePerRow}
	</select>
	
	<select id = "totalCountCategory" resultType = "Integer">
		SELECT COUNT(*) FROM category
		
	</select>
			

	<insert id="insertCategory" parameterType="com.test.mall3.category.service.Category">
		INSERT INTO category(category_name) VALUES (#{categoryName})
	</insert>
</mapper>

